<div class="col-md-6 p-b-30">

  <h4 class="m-text26 p-b-36 p-t-15">
    <%= t('user.form.info') %>
  </h4>

  <% if I18n.locale.to_s == 'en' %>
    <div class="rs2-select2 bo4 of-hidden size15 m-b-20">
      <%= select_tag :user_country, options_for_select(ISO3166::Country.countries.sort_by(&:name)
                                                           .collect { |c| [ c.name, c.alpha2 ] },
                                                       selected: 'BD'),
                     {include_blank: false, id: 'user_country'} %>

    </div>
  <% end %>

  <div class="bo4 of-hidden size15 m-b-20">
    <%= text_field_tag :user_login, nil, class: 'sizefull s-text7 p-l-22 p-r-22',
                       placeholder: t('user.form.login-hint'), name: 'user[login]',
                       data: { presence: t('user.form.login-hint') } %>
    <span class="login-message"></span>
  </div>

  <div class="bo4 of-hidden size15 m-b-20" id="user_password_div">
    <%= password_field_tag :user_password, nil, class: 'sizefull s-text7 p-l-22 p-r-22',
                           placeholder: t('user.form.password-hint'), name: 'user[password]',
                           data: { presence: t('user.form.password-hint') } %>
  </div>

  <%= render 'orders/edit_form_partials/password_confirmation_field' %>

  <span id="password-message"></span>
</div>